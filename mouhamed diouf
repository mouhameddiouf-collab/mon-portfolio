  <script>
  // S√©lectionne le bouton
  const toggleButton = document.getElementById("mode-toggle");

  // V√©rifie si le mode sombre est activ√© dans le stockage local
  if (localStorage.getItem("dark-mode") === "enabled") {
    document.body.classList.add("dark-mode");
    toggleButton.textContent = "‚òÄÔ∏è";
  }

  // √âcoute le clic sur le bouton
  toggleButton.addEventListener("click", () => {
    document.body.classList.toggle("dark-mode");

    // Sauvegarde la pr√©f√©rence de l'utilisateur
    if (document.body.classList.contains("dark-mode")) {
      localStorage.setItem("dark-mode", "enabled");
      toggleButton.textContent = "‚òÄÔ∏è";
    } else {
      localStorage.setItem("dark-mode", "disabled");
      toggleButton.textContent = "üåô";
    }
  });
</script>

<button id="scrollToTop" title="Retour en haut">‚¨ÜÔ∏è</button>
<script>
  // S√©lectionne le bouton
  const scrollToTopButton = document.getElementById("scrollToTop");

  // Afficher le bouton lorsque l'utilisateur descend
  window.addEventListener("scroll", () => {
    if (window.scrollY > 300) { // S'affiche apr√®s 300px de d√©filement
      scrollToTopButton.style.display = "block";
    } else {
      scrollToTopButton.style.display = "none";
    }
  });

  // Faire d√©filer vers le haut quand on clique sur le bouton
  scrollToTopButton.addEventListener("click", () => {
    window.scrollTo({
      top: 0,
      behavior: "smooth" // Animation fluide
    });
  });
</script>

<script>
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      document.querySelector(this.getAttribute('href')).scrollIntoView({
        behavior: 'smooth'
      });
    });
  });
</script>

<script>
  const cursor = document.createElement("div");
  cursor.classList.add("cursor");
  document.body.appendChild(cursor);

  document.addEventListener("mousemove", (e) => {
    cursor.style.left = `${e.clientX}px`;
    cursor.style.top = `${e.clientY}px`;
  });
</script>

<script>
  window.addEventListener("scroll", function () {
    let profil = document.querySelector(".photo-profil");
    profil.style.transform = "translateY(" + window.scrollY / 5 + "px)";
  });
</script>

<script>
  const buttonClickSound = new Audio("sounds/click.mp3");

  document.querySelectorAll("button").forEach(button => {
    button.addEventListener("click", () => {
      buttonClickSound.play();
    });
  });
</script>

<script>
  document.querySelectorAll("a").forEach(link => {
    link.addEventListener("click", function (event) {
      if (this.href.includes(window.location.origin)) {
        event.preventDefault();
        document.body.classList.add("fade-out");
        setTimeout(() => {
          window.location.href = this.href;
        }, 500);
      }
    });
  });
</script>

<script>
  document.querySelectorAll(".logo").forEach(logo => {
    logo.addEventListener("mousemove", (e) => {
      const { offsetX, offsetY } = e;
      const moveX = (offsetX - 50) / 10;
      const moveY = (offsetY - 50) / 10;
      logo.style.transform = `translate(${moveX}px, ${moveY}px)`;
    });

    logo.addEventListener("mouseleave", () => {
      logo.style.transform = "translate(0, 0)";
    });
  });
</script>

